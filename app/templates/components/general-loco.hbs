<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">GL {{gl.address}}</h3>
    <button type="button" class="btn btn-default btn-xs pull-right" {{action "remove"}}>
      <span class="glyphicon glyphicon-remove"/>
    </button>
    <button type="button" class="btn btn-default btn-xs pull-right" data-toggle="modal" data-target="#editDialog">
      <span class="glyphicon glyphicon-edit"/>
    </button>
  </div>
  <div class="panel-body">
    <div class="row">
      <button type="button" class="btn btn-default col-lg-2" {{action "setSpeed" -10}}>
        <span class="glyphicon glyphicon-backward"/>
      </button>
      <button type="button" class="btn btn-default col-lg-2" {{action "setSpeed" -1}}>
        <span class="glyphicon glyphicon-play" style="transform: scaleX(-1);"/>
      </button>
      <span class="col-lg-2">{{gl.v}}</span>
      <button type="button" class="btn btn-default col-lg-2" {{action "setSpeed" 1}}>
        <span class="glyphicon glyphicon-play"/>
      </button>
      <button type="button" class="btn btn-default col-lg-2" {{action "setSpeed" 10}}>
        <span class="glyphicon glyphicon-forward"/>
      </button>
      {{#if forward}}
        <button type="button" class="btn btn-default col-lg-2" {{action "setBackward"}}>
          <span class="glyphicon glyphicon-arrow-right"/>
        </button>
      {{else}}
        <button type="button" class="btn btn-default col-lg-2" {{action "setForward"}}>
          <span class="glyphicon glyphicon-arrow-left"/>
        </button>
      {{/if}}
    </div>
    <div class="row">
      {{#each gl.functions as |function index|}}
        <button type="button" class="btn btn-default {{if function "active"}} col-lg-2" data-toggle="button" area-pressed={{if function "true" "false"}} {{action "setFunction" index}}>
          F{{visible-index index}}
        </button>
      {{/each}}
    </div>
    <div class="row">
      <button type="button" class="btn btn-default col-lg-2" {{action "stop"}}>
        <span class="glyphicon glyphicon-stop"/>
      </button>
    </div>
  </div>
  <div id="editDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
