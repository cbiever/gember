<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">GL {{gl.address}} {{gl.name}} </h3>
    <span data-toggle="tooltip" data-placement="top" title="Remove">
      <button type="button" class="btn btn-default btn-xs pull-right" {{action "remove"}}>
        <span class="glyphicon glyphicon-remove"/>
      </button>
    </span>
    <span data-toggle="tooltip" data-placement="top" title="Edit">
      <button type="button" class="btn btn-default btn-xs pull-right" data-toggle="modal" data-target="#bus-{{gl.bus.id}}-{{gl.id}}-editGL" style="margin-right: 5px">
        <span class="glyphicon glyphicon-edit"/>
      </button>
    </span>
  </div>
  <div class="panel-body">
    <form role="form" style="width: 100%">
      <div class="form-group">
        <input type="range" max="{{gl.Vmax}}" value="{{gl.v}}" onchange={{action 'setSpeed'}} data-toggle="tooltip" data-placement="top" title="Speed {{gl.v}}"/>
      </div>
      <div class="form-group">
        <span class="col-xs-2">
          <button type="button" class="btn btn-default" {{action "changeSpeed" -10}}>
            <span class="glyphicon glyphicon-backward"/>
          </button>
        </span>
        <span class="col-xs-2">
          <button type="button" class="btn btn-default" {{action "changeSpeed" -1}}>
            <span class="glyphicon glyphicon-play" style="transform: scaleX(-1);"/>
          </button>
        </span>
        <span class="col-xs-2">
          <button type="button" class="btn btn-default" {{action "changeSpeed" 1}}>
            <span class="glyphicon glyphicon-play"/>
          </button>
        </span>
        <span class="col-xs-2">
          <button type="button" class="btn btn-default" {{action "changeSpeed" 10}}>
            <span class="glyphicon glyphicon-forward"/>
          </button>
        </span>
        <span class="col-xs-2">
          {{#if forward}}
            <button type="button" class="btn btn-default" {{action "setBackward"}}>
              <span class="glyphicon glyphicon-arrow-right"/>
            </button>
          {{else}}
            <button type="button" class="btn btn-default" {{action "setForward"}}>
              <span class="glyphicon glyphicon-arrow-left"/>
            </button>
          {{/if}}
        </span>
        <span class="col-xs-2">
          <button type="button" class="btn btn-default" {{action "stop"}}>
            <span class="glyphicon glyphicon-stop"/>
          </button>
        </span>
      </div>
      <div class="form-group">
        {{#each gl.functions as |function index|}}
          <span class="col-xs-2">
            <button type="button" class="btn btn-default {{if function "active"}}" area-pressed={{if function "true" "false"}} {{action "setFunction" index}}>
              F{{visible-index index}}
            </button>
          </span>
        {{/each}}
      </div>
    </form>
  </div>
  {{edit-gl gl=gl onModify=(action 'modify')}}
</div>
